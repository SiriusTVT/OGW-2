{% doc %}
  @prompt
    Create a simple header section with OGW Tech brand name. Include a clean navigation bar with the OGW Tech logo/text prominently displayed, basic navigation menu, and modern styling suitable for a tech store. Use professional typography and spacing.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    border-bottom: 1px solid {{ block.settings.border_color }};
    position: relative;
    z-index: 100;
  }

  .ai-header-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: {{ block.settings.header_height }}px;
  }

  .ai-header-logo-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: {{ block.settings.logo_color }};
    font-size: {{ block.settings.logo_size }}px;
    font-weight: 700;
    letter-spacing: -0.02em;
    transition: color 0.3s ease;
  }

  .ai-header-logo-{{ ai_gen_id }}:hover {
    color: {{ block.settings.logo_hover_color }};
  }

  .ai-header-logo-image-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    height: auto;
    margin-right: 12px;
  }

  .ai-header-nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.nav_spacing }}px;
  }

  .ai-header-nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.nav_color }};
    text-decoration: none;
    font-size: {{ block.settings.nav_font_size }}px;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 6px;
    transition: all 0.3s ease;
    position: relative;
  }

  .ai-header-nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.nav_hover_color }};
    background-color: {{ block.settings.nav_hover_bg }};
  }

  .ai-header-mobile-toggle-{{ ai_gen_id }} {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: {{ block.settings.nav_color }};
  }

  .ai-header-mobile-nav-{{ ai_gen_id }} {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background-color: {{ block.settings.background_color }};
    border-top: 1px solid {{ block.settings.border_color }};
    padding: 20px;
    flex-direction: column;
    gap: 16px;
  }

  .ai-header-mobile-nav-{{ ai_gen_id }}.active {
    display: flex;
  }

  .ai-header-mobile-nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.nav_color }};
    text-decoration: none;
    font-size: {{ block.settings.nav_font_size }}px;
    font-weight: 500;
    padding: 12px 0;
    border-bottom: 1px solid {{ block.settings.border_color }};
    transition: color 0.3s ease;
  }

  .ai-header-mobile-nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.nav_hover_color }};
  }

  .ai-header-mobile-nav-link-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  @media screen and (max-width: 768px) {
    .ai-header-nav-{{ ai_gen_id }} {
      display: none;
    }

    .ai-header-mobile-toggle-{{ ai_gen_id }} {
      display: block;
    }

    .ai-header-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-header-logo-{{ ai_gen_id }} {
      font-size: {{ block.settings.logo_size | times: 0.85 }}px;
    }

    .ai-header-logo-image-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width | times: 0.8 }}px;
    }
  }
{% endstyle %}

<header-navigation-{{ ai_gen_id }}
  class="ai-header-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-header-container-{{ ai_gen_id }}">
    <a href="{{ block.settings.logo_link | default: '/' }}" class="ai-header-logo-{{ ai_gen_id }}">
      {% if block.settings.logo_image %}
        <img
          src="{{ block.settings.logo_image | image_url: width: 200}}"
          alt="{{ shop.name | escape }}"
          class="ai-header-logo-image-{{ ai_gen_id }}"
          width="{{ block.settings.logo_width }}"
          height="auto"
          loading="lazy"
        >
      {% endif %}
      {{ block.settings.brand_name }}
    </a>

    <nav class="ai-header-nav-{{ ai_gen_id }}">
      {% if block.settings.nav_link_1_text != blank %}
        <a href="{{ block.settings.nav_link_1_url | default: '#' }}" class="ai-header-nav-link-{{ ai_gen_id }}">
          {{ block.settings.nav_link_1_text }}
        </a>
      {% endif %}
      {% if block.settings.nav_link_2_text != blank %}
        <a href="{{ block.settings.nav_link_2_url | default: '#' }}" class="ai-header-nav-link-{{ ai_gen_id }}">
          {{ block.settings.nav_link_2_text }}
        </a>
      {% endif %}
      {% if block.settings.nav_link_3_text != blank %}
        <a href="{{ block.settings.nav_link_3_url | default: '#' }}" class="ai-header-nav-link-{{ ai_gen_id }}">
          {{ block.settings.nav_link_3_text }}
        </a>
      {% endif %}
      {% if block.settings.nav_link_4_text != blank %}
        <a href="{{ block.settings.nav_link_4_url | default: '#' }}" class="ai-header-nav-link-{{ ai_gen_id }}">
          {{ block.settings.nav_link_4_text }}
        </a>
      {% endif %}
      {% if block.settings.nav_link_5_text != blank %}
        <a href="{{ block.settings.nav_link_5_url | default: '#' }}" class="ai-header-nav-link-{{ ai_gen_id }}">
          {{ block.settings.nav_link_5_text }}
        </a>
      {% endif %}
    </nav>

    <button class="ai-header-mobile-toggle-{{ ai_gen_id }}" aria-label="Toggle mobile menu" aria-expanded="false">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>
  </div>

  <nav class="ai-header-mobile-nav-{{ ai_gen_id }}">
    {% if block.settings.nav_link_1_text != blank %}
      <a href="{{ block.settings.nav_link_1_url | default: '#' }}" class="ai-header-mobile-nav-link-{{ ai_gen_id }}">
        {{ block.settings.nav_link_1_text }}
      </a>
    {% endif %}
    {% if block.settings.nav_link_2_text != blank %}
      <a href="{{ block.settings.nav_link_2_url | default: '#' }}" class="ai-header-mobile-nav-link-{{ ai_gen_id }}">
        {{ block.settings.nav_link_2_text }}
      </a>
    {% endif %}
    {% if block.settings.nav_link_3_text != blank %}
      <a href="{{ block.settings.nav_link_3_url | default: '#' }}" class="ai-header-mobile-nav-link-{{ ai_gen_id }}">
        {{ block.settings.nav_link_3_text }}
      </a>
    {% endif %}
    {% if block.settings.nav_link_4_text != blank %}
      <a href="{{ block.settings.nav_link_4_url | default: '#' }}" class="ai-header-mobile-nav-link-{{ ai_gen_id }}">
        {{ block.settings.nav_link_4_text }}
      </a>
    {% endif %}
    {% if block.settings.nav_link_5_text != blank %}
      <a href="{{ block.settings.nav_link_5_url | default: '#' }}" class="ai-header-mobile-nav-link-{{ ai_gen_id }}">
        {{ block.settings.nav_link_5_text }}
      </a>
    {% endif %}
  </nav>
</header-navigation-{{ ai_gen_id }}>

<script>
  (function() {
    class HeaderNavigation{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();}

      connectedCallback() {
        this.mobileToggle = this.querySelector('.ai-header-mobile-toggle-{{ ai_gen_id }}');
        this.mobileNav = this.querySelector('.ai-header-mobile-nav-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        if (this.mobileToggle && this.mobileNav) {
          this.mobileToggle.addEventListener('click', () => {
            const isActive = this.mobileNav.classList.contains('active');
            this.mobileNav.classList.toggle('active');
            this.mobileToggle.setAttribute('aria-expanded', !isActive);
          });document.addEventListener('click', (event) => {
            if (!this.contains(event.target)) {
              this.mobileNav.classList.remove('active');
              this.mobileToggle.setAttribute('aria-expanded', 'false');
            }
          });

          window.addEventListener('resize', () => {
            if (window.innerWidth > 768) {
              this.mobileNav.classList.remove('active');
              this.mobileToggle.setAttribute('aria-expanded', 'false');
            }
          });
        }
      }
    }

    customElements.define('header-navigation-{{ ai_gen_id }}', HeaderNavigation{{ ai_gen_id }});
  })();
</script>

