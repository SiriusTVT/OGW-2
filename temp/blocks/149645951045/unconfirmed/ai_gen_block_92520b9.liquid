{% doc %}
  @prompt
    Create a custom header/navbar section for OGW Tech store with dark theme design. Include a sticky navigation bar with logo, menu items (Home, Products, Categories, Offers, Contact), search icon, shopping cart with notification badge, user profile icon, and mobile responsive hamburger menu. Use dark gray background (bg-gray-800), indigo accent colors, and modern styling with hover effects. Include the OGW Tech logo and branding with proper spacing and typography.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-{{ ai_gen_id }} {
    position: sticky;
    top: 0;
    z-index: 1000;
    background-color: #1f2937;
    border-bottom: 1px solid #374151;
    transition: all 0.3s ease;
  }

  .ai-header-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;height: 70px;
  }

  .ai-header-logo-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #ffffff;
    font-weight: 700;
    font-size: 24px;
    letter-spacing: -0.025em;
  }

  .ai-header-logo-{{ ai_gen_id }}:hover {
    color: #6366f1;
  }

  .ai-header-logo-image-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    margin-right: 12px;
  }

  .ai-header-logo-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-header-logo-placeholder-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    margin-right: 12px;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-header-logo-placeholder-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
    color: #ffffff;
  }

  .ai-header-nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .ai-header-nav-link-{{ ai_gen_id }} {
    color: #d1d5db;
    text-decoration: none;
    font-weight: 500;
    font-size: 16px;
    padding: 0.5rem 0;
    position: relative;
    transition: color 0.3s ease;
  }

  .ai-header-nav-link-{{ ai_gen_id }}:hover {
    color: #6366f1;
  }

  .ai-header-nav-link-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #6366f1;
    transition: width 0.3s ease;
  }

  .ai-header-nav-link-{{ ai_gen_id }}:hover::after {
    width: 100%;
  }

  .ai-header-actions-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .ai-header-action-btn-{{ ai_gen_id }} {
    background: none;
    border: none;
    color: #d1d5db;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-header-action-btn-{{ ai_gen_id }}:hover {
    color: #6366f1;
    background-color: #374151;
  }

  .ai-header-action-btn-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-header-cart-badge-{{ ai_gen_id }} {
    position: absolute;
    top: -4px;
    right: -4px;
    background-color: #ef4444;
    color: #ffffff;
    font-size: 12px;
    font-weight: 600;
    padding: 2px 6px;
    border-radius: 50%;
    min-width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-header-mobile-menu-btn-{{ ai_gen_id }} {
    display: none;
    background: none;
    border: none;
    color: #d1d5db;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .ai-header-mobile-menu-btn-{{ ai_gen_id }}:hover {
    color: #6366f1;background-color: #374151;
  }

  .ai-header-mobile-menu-btn-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-header-mobile-menu-{{ ai_gen_id }} {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background-color: #1f2937;
    border-bottom: 1px solid #374151;
    padding: 1rem;
    transform: translateY(-100%);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .ai-header-mobile-menu-{{ ai_gen_id }}.active {
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
  }

  .ai-header-mobile-nav-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .ai-header-mobile-nav-link-{{ ai_gen_id }} {
    color: #d1d5db;
    text-decoration: none;
    font-weight: 500;
    font-size: 16px;
    padding: 0.75rem 0;
    border-bottom: 1px solid #374151;
    transition: color 0.3s ease;
  }

  .ai-header-mobile-nav-link-{{ ai_gen_id }}:hover {
    color: #6366f1;
  }

  .ai-header-mobile-actions-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #374151;
  }

  @media (max-width: 768px) {
    .ai-header-nav-{{ ai_gen_id }} {
      display: none;
    }

    .ai-header-mobile-menu-btn-{{ ai_gen_id }} {
      display: flex;
    }

    .ai-header-actions-{{ ai_gen_id }} {
      gap: 0.5rem;
    }

    .ai-header-logo-{{ ai_gen_id }} {
      font-size: 20px;
    }

    .ai-header-logo-image-{{ ai_gen_id }},
    .ai-header-logo-placeholder-{{ ai_gen_id }} {
      width: 32px;
      height: 32px;margin-right: 8px;
    }
  }

  @media (max-width: 480px) {
    .ai-header-container-{{ ai_gen_id }} {
      padding: 0 0.75rem;
      height: 60px;
    }

    .ai-header-logo-{{ ai_gen_id }} {
      font-size: 18px;
    }

    .ai-header-action-btn-{{ ai_gen_id }} svg {
      width: 20px;
      height: 20px;
    }
  }
{% endstyle %}

<header-navigation-{{ ai_gen_id }} class="ai-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-header-container-{{ ai_gen_id }}">
    <a href="/" class="ai-header-logo-{{ ai_gen_id }}">
      {% if block.settings.logo %}
        <div class="ai-header-logo-image-{{ ai_gen_id }}">
          <img
            src="{{ block.settings.logo | image_url: width: 80}}"
            alt="{{ shop.name }}"
            width="80"
            height="80"
            loading="lazy"
          >
        </div>
      {% else %}
        <div class="ai-header-logo-placeholder-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
          </svg>
        </div>
      {% endif %}{{ block.settings.store_name }}
    </a>

    <nav class="ai-header-nav-{{ ai_gen_id }}">
      <a href="{{ block.settings.home_link }}" class="ai-header-nav-link-{{ ai_gen_id }}">{{ block.settings.home_text }}</a>
      <a href="{{ block.settings.products_link }}" class="ai-header-nav-link-{{ ai_gen_id }}">{{ block.settings.products_text }}</a>
      <a href="{{ block.settings.categories_link }}" class="ai-header-nav-link-{{ ai_gen_id }}">{{ block.settings.categories_text }}</a>
      <a href="{{ block.settings.offers_link }}" class="ai-header-nav-link-{{ ai_gen_id }}">{{ block.settings.offers_text }}</a>
      <a href="{{ block.settings.contact_link }}" class="ai-header-nav-link-{{ ai_gen_id }}">{{ block.settings.contact_text }}</a>
    </nav>

    <div class="ai-header-actions-{{ ai_gen_id }}">
      {% if block.settings.show_search %}
        <button class="ai-header-action-btn-{{ ai_gen_id }}" aria-label="Search" data-action="search">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </button>
      {% endif %}

      {% if block.settings.show_cart %}
        <a href="/cart" class="ai-header-action-btn-{{ ai_gen_id }}" aria-label="Shopping cart">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m80V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"/>
          </svg>{% if cart.item_count > 0 %}
            <span class="ai-header-cart-badge-{{ ai_gen_id }}">{{ cart.item_count }}</span>
          {% endif %}
        </a>
      {% endif %}

      {% if block.settings.show_account %}
        <a href="/account" class="ai-header-action-btn-{{ ai_gen_id }}" aria-label="User account">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </a>
      {% endif %}<button class="ai-header-mobile-menu-btn-{{ ai_gen_id }}" aria-label="Toggle mobile menu" data-mobile-menu-toggle>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <div class="ai-header-mobile-menu-{{ ai_gen_id }}" data-mobile-menu>
      <nav class="ai-header-mobile-nav-{{ ai_gen_id }}">
        <a href="{{ block.settings.home_link }}" class="ai-header-mobile-nav-link-{{ ai_gen_id }}">{{ block.settings.home_text }}</a>
        <a href="{{ block.settings.products_link }}" class="ai-header-mobile-nav-link-{{ ai_gen_id }}">{{ block.settings.products_text }}</a>
        <a href="{{ block.settings.categories_link }}" class="ai-header-mobile-nav-link-{{ ai_gen_id }}">{{ block.settings.categories_text }}</a>
        <a href="{{ block.settings.offers_link }}" class="ai-header-mobile-nav-link-{{ ai_gen_id }}">{{ block.settings.offers_text }}</a>
        <a href="{{ block.settings.contact_link }}" class="ai-header-mobile-nav-link-{{ ai_gen_id }}">{{ block.settings.contact_text }}</a>
      </nav>

      <div class="ai-header-mobile-actions-{{ ai_gen_id }}">
        {% if block.settings.show_search %}
          <button class="ai-header-action-btn-{{ ai_gen_id }}" aria-label="Search" data-action="search">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </button>
        {% endif %}

        {% if block.settings.show_cart %}
          <a href="/cart" class="ai-header-action-btn-{{ ai_gen_id }}" aria-label="Shopping cart">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"/>
            </svg>
            {% if cart.item_count > 0 %}
              <span class="ai-header-cart-badge-{{ ai_gen_id }}">{{ cart.item_count }}</span>
            {% endif %}
          </a>
        {% endif %}

        {% if block.settings.show_account %}
          <a href="/account" class="ai-header-action-btn-{{ ai_gen_id }}" aria-label="User account">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</header-navigation-{{ ai_gen_id }}>

<script>
  (function() {
    class HeaderNavigation{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.mobileMenuToggle = this.querySelector('[data-mobile-menu-toggle]');
        this.mobileMenu = this.querySelector('[data-mobile-menu]');
        this.searchButtons = this.querySelectorAll('[data-action="search"]');
        this.setupEventListeners();
      }

      setupEventListeners() {
        if (this.mobileMenuToggle && this.mobileMenu) {
          this.mobileMenuToggle.addEventListener('click', () => {
            this.toggleMobileMenu();
          });document.addEventListener('click', (event) => {
            if (!this.contains(event.target)) {
              this.closeMobileMenu();
            }
          });

          this.mobileMenu.addEventListener('click', (event) => {
            if (event.target.tagName === 'A') {
              this.closeMobileMenu();
            }
          });
        }

        this.searchButtons.forEach(button => {
          button.addEventListener('click', () => {
            this.handleSearch();
          });
        });

        window.addEventListener('resize', () => {
          if (window.innerWidth > 768) {
            this.closeMobileMenu();
          }
        });
      }

      toggleMobileMenu() {
        const isOpen = this.mobileMenu.classList.contains('active');
        if (isOpen) {
          this.closeMobileMenu();
        } else {
          this.openMobileMenu();
        }
      }

      openMobileMenu() {
        this.mobileMenu.classList.add('active');
        this.mobileMenuToggle.setAttribute('aria-expanded', 'true');
        document.body.style.overflow = 'hidden';
      }

      closeMobileMenu() {
        this.mobileMenu.classList.remove('active');
        this.mobileMenuToggle.setAttribute('aria-expanded', 'false');
        document.body.style.overflow = '';
      }

      handleSearch() {
        if (window.predictiveSearch) {
          window.predictiveSearch.open();
        } else {
          window.location.href = '/search';
        }
      }
    }

    customElements.define('header-navigation-{{ ai_gen_id }}', HeaderNavigation{{ ai_gen_id }});
  })();
</script>

